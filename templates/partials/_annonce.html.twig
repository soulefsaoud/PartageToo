{% extends "base.html.twig" %}



{% block title %}Accueil des annonces{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des annonces</h1>
    <div class="row">
        {% for annonce in annonces %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ annonce.title }}</h5>
                        <p class="card-text">{{ annonce.description }}</p>
                        <p class="card-text"><small class="text-muted">Publi√© le {{ annonce.createdAt|date('d/m/Y H:i') }}</small></p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
